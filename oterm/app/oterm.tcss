ChatContainer {
    height: auto;
}
#messageContainer {
    overflow-y: auto;
    padding: 1;
    height: 100%;
}

ChatItem {
    padding: 1;
    padding-bottom: 0;
    height: auto;
}

ChatItem .chatItem {
    height: auto;
}

ChatItem .author {
    width: 8%;
    padding: 1;
    color: $secondary;

}

ChatItem .USER {
    background: $panel;
}

ChatItem .OLLAMA {
    background: $panel-lighten-1;
}

ChatItem .text{
    margin: 1;
    width: 90%;
}

PromptWidget {
    background: $panel;
    height: 5;
    margin: 1;
    padding: 1;
    dock: bottom;
}

PromptWidget Input {
    margin-right: 1;
    padding-right: 1;
    overflow-y: auto;
}

LoadingIndicator {
    height: 3;
}

#model-select-container {
    width: 80%;
    height: auto;
    background: $panel;
    border: $panel-lighten-1;
}

#model-select-container .title {
    color: $secondary;
}

#model-select {
    margin-top: 1;
    width: 50%;
}

#model-details {
    margin: 2;
    width: 50%;
}

#splash-container {
    height: 100%;
    width: 100%;
    background: $panel;
}

#splash {
    color: $secondary;
    height: 100%;
    width: 100%;
    content-align: center middle;
}